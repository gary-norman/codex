{{ define "chat-controls" }}
{{ $dot := . }}
<div class="sidebar-block ">
<small class="padded">Chats</small>
<div class="side-panel-block">
{{ range $dot.Chats }}
{{ $chat := . }}
  <button popovertarget="form-chat-{{ .ID }}" class="chat-control" data-user-online="true">
    <span class="btn-posts">{{ if eq $chat.ChatType "buddy" }}{{ $chat.Buddy.Username }}{{ else }}{{ $chat.Group.Name }}{{ end }}</span>
  </button>
  {{ end }}
  </div>
</div>

<div class="sidebar-block ">
<small class="padded">Start New Chat</small>
<div class="side-panel-block">
{{ range $dot.AllUsers }}
{{ $user := . }}
{{ if ne $user.ID $dot.CurrentUser.ID }}
  <button class="chat-control btn-start-chat" data-user-online="true" data-user-id="{{ $user.ID }}" data-username="{{ $user.Username }}">
    <span class="btn-posts">{{ $user.Username }}</span>
  </button>
  {{ end }}
  {{ end }}
  </div>
</div>
{{ end }}
